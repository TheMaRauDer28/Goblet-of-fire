#include<bits/stdc++.h>
 
#define fast ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0)
 
#define ll long long int
using namespace std;
 
int main() 
{
    
fast;
    ll n,i,j,k,l,cnt=0,m;
    ll a[5][5]={0};
    for(i=0;i<5;i++)
    {
        for(j=0;j<5;j++)
        {
            cin>>a[i][j];
            l=a[i][j];
            if(a[i][j]==1)
            {
                cout<<abs(2-i)+abs(2-j);
                return 0;
            }
        }
    }
}
